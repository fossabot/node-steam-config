{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": [
          "./package.json",
          "./README.md",
          "./lib/index.js",
          "./lib/steamPaths.js",
          "./lib/steamUtils.js"
        ]
    },
    "plugins": [
      "plugins/markdown"
    ],
    "templates": {
        "referenceTitle": "SteamConfig API",
        "disableSort": true,
        "monospaceLinks": true,
        "default": {
          "includeDate": false,
          "outputSourceFiles": false
        },
        "theme": "cyborg"
    },
    "opts": {
      "destination": "./docs/",
      "encoding": "utf8",
      "recurse": false
    }
}
